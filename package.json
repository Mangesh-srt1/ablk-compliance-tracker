{
  "name": "ableka-lumina",
  "version": "1.0.0",
  "description": "AI-driven RegTech SaaS platform for RWA tokenization and compliance",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20.11.0",
    "npm": ">=10.0.0"
  },
  "workspaces": [
    "compliance-system/src/api",
    "compliance-system/src/agents",
    "compliance-system/src/dashboard",
    "compliance-system/cdk"
  ],
  "scripts": {
    "bootstrap": "npm install && npm run setup:husky",
    "setup:husky": "husky install",
    "install-husky": "cd . && npm install husky --save-dev && npm exec husky install",
    "lint": "eslint . --ext .ts,.tsx --max-warnings 0",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "dev": "npm run dev --workspace=compliance-system/src/api & npm run dev --workspace=compliance-system/src/agents",
    "dev:api": "npm run dev --workspace=compliance-system/src/api",
    "dev:agents": "npm run dev --workspace=compliance-system/src/agents",
    "build": "npm run build --workspaces",
    "build:api": "npm run build --workspace=compliance-system/src/api",
    "build:agents": "npm run build --workspace=compliance-system/src/agents",
    "build:cdk": "npm run build --workspace=compliance-system/cdk",
    "start": "npm run start --workspace=compliance-system/src/api",
    "start:api": "npm run start --workspace=compliance-system/src/api",
    "start:agents": "npm run start --workspace=compliance-system/src/agents",
    "docker:up": "docker-compose -f compliance-system/docker-compose.yml up -d",
    "docker:down": "docker-compose -f compliance-system/docker-compose.yml down",
    "docker:logs": "docker-compose -f compliance-system/docker-compose.yml logs -f",
    "docker:dev:up": "docker-compose -f compliance-system/docker-compose.dev.yml up",
    "docker:dev:down": "docker-compose -f compliance-system/docker-compose.dev.yml down",
    "docker:dev:logs": "docker-compose -f compliance-system/docker-compose.dev.yml logs -f",
    "db:migrate": "npm run migrate --workspace=compliance-system/src/api",
    "db:migrate:latest": "npm run migrate:latest --workspace=compliance-system/src/api",
    "db:seed": "npm run seed --workspace=compliance-system/src/api",
    "clean": "rm -rf dist build .turbo node_modules && npm install",
    "clean:deep": "rm -rf dist build .turbo .cache node_modules compliance-system/src/*/dist compliance-system/src/*/node_modules && npm install"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-security": "^2.1.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  }
}
