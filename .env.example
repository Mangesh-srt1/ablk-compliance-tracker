# Environment Configuration Template
# Copy this to .env and fill with actual values
# WARNING: Never commit .env to Git (add to .gitignore)

# ===== APPLICATION =====
NODE_ENV=development
LOG_LEVEL=info
PORT=3000

# ===== DATABASE =====
DB_HOST=localhost
DB_PORT=5432
DB_NAME=compliance_db_dubai
DB_USER=compliance_user
DB_PASSWORD=your_secure_password_here_32_chars_min
DB_MAX_CONNECTIONS=20

# ===== AUTHENTICATION & SECURITY =====
JWT_SECRET=your_jwt_secret_here_generate_with_openssl_rand_32bytes
JWT_EXPIRY=24h
JWT_REFRESH_EXPIRY=7d

# ===== BLOCKCHAIN =====
BESU_RPC_URL=http://localhost:8545
BESU_CHAIN_ID=1337
BESU_NETWORK_ID=1337
BESU_GAS_LIMIT=30000000

# ===== EXTERNAL SERVICES =====

## KYC Provider (Ballerine)
BALLERINE_API_KEY=your_ballerine_api_key
BALLERINE_BASE_URL=https://api.ballerine.io

## AML Provider (Chainalysis)
CHAINALYSIS_API_KEY=your_chainalysis_api_key
CHAINALYSIS_BASE_URL=https://api.chainalysis.com

## Oracle Provider (Chainlink)
CHAINLINK_ORACLE_ADDRESS=0x...
CHAINLINK_JOB_ID=your_job_id

## Dubai Land Department Registry (for asset ownership verification)
DUBAI_LAND_REGISTRY_API_KEY=your_registry_key
DUBAI_LAND_REGISTRY_BASE_URL=https://api.dubailand.ae

## Sanctions List Services (OFAC, UN, etc.)
OFAC_API_KEY=your_ofac_key
UN_SANCTIONS_BUCKET=un-sanctioned-entities-bucket

# ===== CACHING =====
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_password
REDIS_DB=0

# ===== JURISDICTION CONFIGURATION =====
CONFIG_PATH=./compliance-system/config
SUPPORTED_JURISDICTIONS=AE
RULES_ENGINE_RELOAD_INTERVAL_MS=1000

# ===== MONITORING & LOGGING =====
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin_password_here
GRAFANA_PORT=3001

DATADOG_API_KEY=your_datadog_key
DATADOG_ENVIRONMENT=development

# ===== EMAIL & NOTIFICATIONS =====
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=compliance-notifications@yourcompany.com
SMTP_PASSWORD=app_specific_password
NOTIFICATION_EMAIL_FROM=compliance@yourcompany.com

# ===== RATE LIMITING =====
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ===== TIMEOUTS =====
HTTP_TIMEOUT_MS=30000
DB_TIMEOUT_MS=5000
EXTERNAL_API_TIMEOUT_MS=15000

# ===== FEATURE FLAGS =====
FEATURE_INSIDER_TRADING_DETECTION=true
FEATURE_MULTI_JURISDICTION=true
FEATURE_AUTOMATED_KYC=true
FEATURE_AUTOMATED_AML=true

# ===== DEBUGGING =====
DEBUG=false
VERBOSE_LOGGING=false
