# Development Environment Configuration
# Copy this file to .env and update values

# Environment
ENVIRONMENT=development
NODE_ENV=development
LOG_LEVEL=debug

# Database
DB_USER=compliance_user
DB_PASSWORD=secure_password_123
DB_NAME=compliance_db
DB_HOST=postgres
DB_PORT=5432
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}
REDIS_DB=0
REDIS_PASSWORD=
REDIS_MAX_RETRIES=3
REDIS_RETRY_DELAY=1000
REDIS_TIMEOUT=5000
REDIS_KEEP_ALIVE=true

# Blockchain (Besu)
BESU_HOST=besu-validator-1
BESU_PORT=8545
BESU_RPC_URL=http://${BESU_HOST}:${BESU_PORT}

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
JWT_API_KEY=dev-api-key-change-in-production

# AI/ML Configuration
GROK_API_KEY=your-grok-api-key
LANGCHAIN_API_KEY=your-langchain-api-key
OPENAI_API_KEY=your-openai-api-key

# Compliance Configuration
BALLERINE_API_KEY=your-ballerine-api-key
BALLERINE_BASE_URL=https://api.ballerine.io
SEBI_API_ENDPOINT=https://api.sebi.gov.in
DPDP_API_ENDPOINT=https://api.dpdp.gov.in

# AWS Configuration (for production)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=compliance-documents

# Monitoring
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=secure_grafana_password
GRAFANA_PORT=3001

# EventBridge Configuration
EVENT_BUS_NAME=compliance-events
EVENT_BUS_REGION=us-east-1

# Security
ENCRYPTION_KEY=your-256-bit-encryption-key
KMS_KEY_ID=your-kms-key-id

# Compliance Rules
COMPLIANCE_VELOCITY_THRESHOLD=10000
COMPLIANCE_RISK_TOLERANCE=0.05
AML_SUSPICIOUS_AMOUNT=50000

# Deployment
DEPLOYER_PRIVATE_KEY=0x1234567890123456789012345678901234567890123456789012345678901234

# Gas Configuration
TOKEN_DEPLOYMENT_GAS_LIMIT=3000000
GAS_PRICE=20000000000