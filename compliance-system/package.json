{
  "name": "ableka-lumina",
  "version": "1.0.0",
  "description": "AI-driven RegTech SaaS platform for RWA tokenization and compliance",
  "private": true,
  "engines": {
    "node": ">=20.11.0",
    "npm": ">=10.0.0"
  },
  "workspaces": [
    "src/api",
    "src/agents",
    "src/dashboard",
    "cdk"
  ],
  "scripts": {
    "bootstrap": "npm install && npm run setup:husky",
    "setup:husky": "husky install",
    "install-husky": "npm install husky --save-dev && npm exec husky install",
    "lint": "eslint . --ext .ts,.tsx --max-warnings 0",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "dev": "npm run dev --workspace=src/api & npm run dev --workspace=src/agents",
    "dev:api": "npm run dev --workspace=src/api",
    "dev:agents": "npm run dev --workspace=src/agents",
    "build": "npm run build --workspaces",
    "build:api": "npm run build --workspace=src/api",
    "build:agents": "npm run build --workspace=src/agents",
    "build:cdk": "npm run build --workspace=cdk",
    "start": "npm run start --workspace=src/api",
    "start:api": "npm run start --workspace=src/api",
    "start:agents": "npm run start --workspace=src/agents",
    "docker:up": "docker-compose -f docker-compose.yml up -d",
    "docker:down": "docker-compose -f docker-compose.yml down",
    "docker:logs": "docker-compose -f docker-compose.yml logs -f",
    "docker:dev:up": "docker-compose -f docker-compose.dev.yml up",
    "docker:dev:down": "docker-compose -f docker-compose.dev.yml down",
    "docker:dev:logs": "docker-compose -f docker-compose.dev.yml logs -f",
    "db:migrate": "npm run migrate --workspace=src/api",
    "db:migrate:latest": "npm run migrate:latest --workspace=src/api",
    "db:seed": "npm run seed --workspace=src/api",
    "sonar": "npm run test:coverage && npx sonarqube-scanner",
    "sonar:check": "curl -s http://localhost:9000/api/projects/search?keys=ablk-compliance-system | jq .components[0].key || echo '‚ùå Project not found'",
    "sonar:install": "npm install --save-dev sonarqube-scanner",
    "clean": "rm -rf dist build .turbo node_modules && npm install",
    "clean:deep": "rm -rf dist build .turbo .cache node_modules src/*/dist src/*/node_modules && npm install"
  },
  "devDependencies": {
    "@types/swagger-ui-express": "^4.1.8",
    "@types/yaml": "^1.9.6",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-security": "^2.1.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "sonarqube-scanner": "^3.5.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "swagger-ui-express": "^5.0.1",
    "yaml": "^2.8.2"
  }
}
